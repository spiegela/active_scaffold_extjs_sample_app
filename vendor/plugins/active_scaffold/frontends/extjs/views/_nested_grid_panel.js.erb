new Ext.grid.GridPanel({
  id: '<%= controller_id %>_grid',
  ds: <%= controller_id %>_ds,
  cm: <%= controller_id %>_cm,
  sm: new Ext.grid.RowSelectionModel({singleSelect:true}),
  title:      '<%= active_scaffold_config.list.label %>',
  stripeRows: 'true',
  remoteSort: 'true',
  loadMask: 'true',
  listeners: { 'rowdblclick': function(grid, row, e) {
                 window.location.href = "<%= url_for(:controller => controller_id, :action => 'show') %>/" + grid.getStore().getAt(row).id;
                }
  },
  plugins:[<%= controller_id %>_cell_actions],
  viewConfig: {
    forceFit:'true'
  }
})